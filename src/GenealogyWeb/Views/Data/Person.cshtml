    <div class="form-group">
        @Html.LabelFor(m => m.home)
        @Html.CheckBoxFor(m => m.home, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.home)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.naixement_data)
        @Html.TextBoxFor(m => m.naixement_data, new { @class = "form-control" })
