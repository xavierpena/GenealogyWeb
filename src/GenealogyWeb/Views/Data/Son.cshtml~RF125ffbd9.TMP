@using GenealogyWeb.Views

@model GenealogyWeb.Core.Models.Fill

<br />

@{
    if (Model.id.HasValue)
    {
        <div>
            @*@Html.ActionLink("✗ delete person", "deletePerson", new { id = Model.id })
            | @Html.ActionLink("✎ edit marriage", "marriageByPersonId", new { id = Model.id })
            | @Html.ActionLink("🡓 show downward tree", "persondownwardtree", new { id = Model.id })
            | @Html.ActionLink("🡑 show upward tree", "personupwardtree", new { id = Model.id })*@
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Info:</strong> create a new son.
        </div>
    }
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap-select/dist/js/bootstrap-select.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" />
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker({
            liveSearch: true,
            showSubtext: true
        });
    });
</script>

@using (Html.BeginForm("Son", "Data"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.matrimoni_id)
        @Html.DropDownListFor(
            m => m.matrimoni_id,
            new SelectList((List<SelectListItem>)ViewData["men"], "Value", "Text"),
            new
            {
                @class = "form-control selectpicker",
                data_show_subtext = "true",
                data_live_search = "true"
            }
        )
        @Html.ValidationMessageFor(m => m.matrimoni_id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.persona_id)
        @Html.DropDownListFor(
            m => m.dona_id,
            new SelectList((List<SelectListItem>)ViewData["women"], "Value", "Text"),
            new
            {
                @class = "form-control selectpicker",
                data_show_subtext = "true",
                data_live_search = "true"
            }
        )
        @Html.ValidationMessageFor(m => m.home_id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.lloc)
        @Html.TextBoxFor(m => m.lloc, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.lloc)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.data)
        @Html.TextBoxFor(m => m.data, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.data)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.observacions)
        @Html.TextAreaFor(m => m.observacions, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.observacions)
    </div>

    <button type="submit">Save</button>
}
